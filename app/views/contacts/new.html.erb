<% title t(".title") %>

<h1 class="contato"><%= t(".container_title") %></h1>

<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name,  hint: t("activerecord.required"), input_html: {:class => "span4"} %>
  <%= f.input :email, hint: t("activerecord.required"), input_html: {:class => "span4"} %>
  <%= f.input :message, :as => :text, input_html: {:class => "span4"} %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
    <%= link_to t("general.cancel"), root_path, :class => "btn"%>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render("shared/sidebar") %>
<% end %>