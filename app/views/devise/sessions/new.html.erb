<div class="row">
	<div class="span12">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login form-wrapper form-medium' } ) do |f| %>
			<h3 class="title-divider"><span>Nova Pergunta</span> </h3>
				<%= f.input :email, 			required: false, autofocus: true, input_html: { class: "input-block-level" } %>
				<%= f.input :password, 		required: false, input_html: { class: "input-block-level" } %>
				<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

			<div class="form-actions">
				<%= f.button :submit, t(".submit"), class: "secondary button" %>
				or
				<%= link_to "Cancelar", root_path %>
			</div>
			<%= render "devise/shared/links" %>
		<% end %>
	</div>
</div>


