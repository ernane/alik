<h1 class="devise"><%= t(".title") %></h1>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><%= link_to "Informações de Segurança", "#tab1", :"data-toggle" => "tab"%></li>
    <li><%= link_to "Informações Pessoais", "#tab2", :"data-toggle" => "tab"%></li>
    <li><%= link_to "Informações Acadêmicas", "#tab3", :"data-toggle" => "tab"%></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <fieldset>
        <legend>Informações de Segurança</legend>
        <%= f.input :username %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </fieldset>
    </div><!-- tab1 -->

    <div class="tab-pane" id="tab2">
      <fieldset>
        <legend>Informações Pessoais</legend>
        <%= f.input :state_id do %>
          <%= f.collection_select :state_id, State.order(:name), :id, :name, include_blank: true %>
        <% end %>
        <%= f.input :city_id do %>
          <%= f.grouped_collection_select :city_id, State.order(:name), :cities, :name, :id, :name, include_blank: true %>
        <% end %>
        <%= f.input :avatar_url, input_html: {:class => "span3"} %>
        <%= f.input :phone, :as => :string, input_html: {:class => "span3"} %>
        <%= f.input :teaching,            :collection => 1..5%>
        <%= f.input :professional,        :collection => 1..5%>
        <%= f.input :books_published,     :collection => 1..5 %>
        <%= f.input :articles_published,  :collection => 1..5 %>
      </fieldset>
    </div><!-- tab2 -->

    <div class="tab-pane" id="tab3">
      <fieldset>
        <legend>Informações Acadêmicas e de Experiências</legend>
        <%= f.input :postgraduate,        :as => :boolean %>
        <%= f.input :doctorate_in_law,    :as => :boolean %>
        <%= f.input :master_of_law,       :as => :boolean %>
        <%= f.input :postgraduate_in_law, :as => :boolean %>
        <%= f.input :foreign_laguage,     :as => :boolean%>
        <%= f.input :terms_of_use,        :as => :boolean %>
      </fieldset>
    </div><!-- tab3 -->

  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, t(".submit"), class: "btn btn-primary" %>
  <%= link_to "Cancelar", root_path, :class => "btn"%>
</div>
<% end %>

<%= render "devise/shared/links" %>