<h2><%= t(".title") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: { class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :email, :required => true %>

  <div class="form-actions">
    <%= f.submit t(".submit"), class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>