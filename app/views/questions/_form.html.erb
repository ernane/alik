<fieldset>
<%= simple_form_for(@question) do |f| %>

	<%= f.input :title %>
	<%= f.input :requester_name %>
	<div class="row">
		<div class="seven columns">
			<%= f.input :requester_email %>
		</div>
		<div class="five columns">
			<%= f.input :requester_phone %>
		</div>
	</div>

	<div class="row">
		<div class="seven columns">
			<%= f.input :city_id do %>
			<%= f.text_field :city_name, data: {autocomplete_source: cities_path} %>
			<% end %>
		</div>
		<div class="five columns">
			<%= f.input :state_id do %>
			<%= f.text_field :state_name, data: {autocomplete_source: states_path} %>
			<% end %>
		</div>
	</div>

	<%= f.input :description, :as => :text, input_html: {:rows => "10"} %>

	<div class="form-actions">
		<%= f.button :submit,  :class => "secondary button" %> ou
		<%= link_to "Cancelar", root_path %>
	</div>
	<% end %>
</fieldset>

